<?xml version="1.0"?>
<!--
/**
 * NeutromeLabs AiLand System Configuration Definition
 *
 * @category    NeutromeLabs
 * @package     NeutromeLabs_AiLand
 * @author      Cline (AI Assistant)
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- Tab definition -->
        <tab id="neutromelabs" translate="label" sortOrder="400">
            <label>NeutromeLabs</label>
        </tab>

        <!-- Section definition -->
        <section id="ailand" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>AI Landings</label>
            <tab>neutromelabs</tab>
            <resource>NeutromeLabs_AiLand::config</resource> <!-- ACL Resource -->
            <group id="openrouter" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0"> <!-- Changed group ID and label -->
                <label>OpenRouter API</label>
                <field id="api_key" translate="label comment" type="obscure" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API Key</label>
                    <comment>Enter your OpenRouter API Key. Get one from openrouter.ai</comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <validate>required-entry</validate>
                </field>
                 <field id="model" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Model Name</label>
                    <comment>Enter the OpenRouter model identifier (e.g., 'openai/gpt-4o', 'google/gemini-pro', 'qwen/qwq-32b:free'). Default: 'qwen/qwq-32b:free'.</comment>
                    <validate>required-entry</validate>
                </field>
                 <field id="product_base_prompt" translate="label comment" type="textarea" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Product Base Prompt</label>
                    <comment>The base system instruction sent to the AI when generating from a product. Use placeholders like {{PRODUCT_NAME}}, {{PRODUCT_PRICE}}, {{PRODUCT_DESCRIPTION}} if needed (Note: Placeholder replacement is not implemented yet).</comment>
                </field>
                 <field id="category_base_prompt" translate="label comment" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Category Base Prompt</label>
                    <comment>The base system instruction sent to the AI when generating from a category. Use placeholders like {{CATEGORY_NAME}}, {{CATEGORY_DESCRIPTION}} if needed (Note: Placeholder replacement is not implemented yet).</comment>
                </field>
            </group>
        </section>
    </system>
</config>
